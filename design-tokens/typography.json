{
  "$schema": "https://design-tokens.json-schema.org/",
  "name": "CSS Design System Typography",
  "description": "Typography tokens following Refactoring UI principles - hand-picked values, not mathematical ratios",

  "fontFamily": {
    "sans": {
      "value": "Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "description": "Primary font for UI text - Inter provides excellent readability"
    },
    "serif": {
      "value": "Georgia, Cambria, 'Times New Roman', Times, serif",
      "description": "For long-form content when needed"
    },
    "mono": {
      "value": "'JetBrains Mono', 'Fira Code', ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace",
      "description": "For code blocks and technical content"
    }
  },

  "fontSize": {
    "xs": { "value": "12px", "rem": "0.75rem", "description": "Tertiary text, labels, badges" },
    "sm": { "value": "14px", "rem": "0.875rem", "description": "Secondary text, captions" },
    "base": { "value": "16px", "rem": "1rem", "description": "Body copy (Default)" },
    "lg": { "value": "18px", "rem": "1.125rem", "description": "Large body text" },
    "xl": { "value": "20px", "rem": "1.25rem", "description": "Small headings" },
    "2xl": { "value": "24px", "rem": "1.5rem", "description": "Section headers (h3)" },
    "3xl": { "value": "30px", "rem": "1.875rem", "description": "Section headers (h2)" },
    "4xl": { "value": "36px", "rem": "2.25rem", "description": "Page titles (h1)" },
    "5xl": { "value": "48px", "rem": "3rem", "description": "Large display text" },
    "6xl": { "value": "60px", "rem": "3.75rem", "description": "Extra large display" },
    "7xl": { "value": "72px", "rem": "4.5rem", "description": "Hero headlines" }
  },

  "fontWeight": {
    "light": { "value": "300", "description": "Avoid for UI text, decorative only" },
    "normal": { "value": "400", "description": "Default body text" },
    "medium": { "value": "500", "description": "Slightly emphasized text" },
    "semibold": { "value": "600", "description": "Subheadings, emphasis" },
    "bold": { "value": "700", "description": "Headlines, strong emphasis" },
    "extrabold": { "value": "800", "description": "Hero text, display headings" }
  },

  "lineHeight": {
    "none": { "value": "1", "description": "Single-line text only" },
    "tight": { "value": "1.25", "description": "Headlines and display text" },
    "snug": { "value": "1.375", "description": "Large text blocks" },
    "normal": { "value": "1.5", "description": "Body text (narrow columns)" },
    "relaxed": { "value": "1.625", "description": "Body text (medium columns)" },
    "loose": { "value": "2", "description": "Wide content areas" }
  },

  "letterSpacing": {
    "tighter": { "value": "-0.05em", "description": "Large headlines to mimic display fonts" },
    "tight": { "value": "-0.025em", "description": "Headlines" },
    "normal": { "value": "0em", "description": "Default tracking" },
    "wide": { "value": "0.025em", "description": "Small caps, buttons" },
    "wider": { "value": "0.05em", "description": "All-caps text" },
    "widest": { "value": "0.1em", "description": "Spaced-out labels" }
  },

  "textStyles": {
    "heading1": {
      "fontSize": "36px",
      "fontWeight": "700",
      "lineHeight": "1.25",
      "letterSpacing": "-0.025em",
      "description": "Page titles"
    },
    "heading2": {
      "fontSize": "30px",
      "fontWeight": "600",
      "lineHeight": "1.25",
      "letterSpacing": "-0.025em",
      "description": "Section headers"
    },
    "heading3": {
      "fontSize": "24px",
      "fontWeight": "600",
      "lineHeight": "1.375",
      "letterSpacing": "0",
      "description": "Subsection headers"
    },
    "heading4": {
      "fontSize": "20px",
      "fontWeight": "600",
      "lineHeight": "1.375",
      "letterSpacing": "0",
      "description": "Card titles"
    },
    "body": {
      "fontSize": "16px",
      "fontWeight": "400",
      "lineHeight": "1.5",
      "letterSpacing": "0",
      "description": "Default body text"
    },
    "bodyLarge": {
      "fontSize": "18px",
      "fontWeight": "400",
      "lineHeight": "1.625",
      "letterSpacing": "0",
      "description": "Large body text for emphasis"
    },
    "bodySmall": {
      "fontSize": "14px",
      "fontWeight": "400",
      "lineHeight": "1.5",
      "letterSpacing": "0",
      "description": "Secondary/caption text"
    },
    "caption": {
      "fontSize": "12px",
      "fontWeight": "500",
      "lineHeight": "1.5",
      "letterSpacing": "0.025em",
      "description": "Small labels, badges"
    },
    "overline": {
      "fontSize": "12px",
      "fontWeight": "600",
      "lineHeight": "1.5",
      "letterSpacing": "0.05em",
      "textTransform": "uppercase",
      "description": "Overline labels, section tags"
    }
  }
}
